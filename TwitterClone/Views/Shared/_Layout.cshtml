<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Twitter</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style type="text/css">
        .navbar .container-fluid, .navbar-expand-lg .navbar-collapse, .navbar-expand-lg .navbar-nav {
            flex-direction: column;
            align-items: flex-start;
        }

        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Ubuntu, "Helvetica Neue", sans-serif;
        }   

        .navbar {
            width: 20%;
            height: 100vh;
            align-items: flex-start;
            margin-left: 100px;
            display: flex;
            position: fixed;
        }

        .hr {
            background-color: gray;
            opacity: 0.4;
            width: 1px;
            height: 100vh;
            margin-left: 20rem;
            display: flex;
            position: fixed;
        }

        .xlogo{
            width: 3rem;
            height: 1.5rem;
        }

        .nav-link {
            font-size: 1.5rem;
            margin-top:10px;
        }

        @@media screen and (max-width:992px) {
            .navbar, .hr, .gundem {
                display: none;
            }
        }

        @@media screen and (min-width:992px) {
            .offcanvas, .hrefButon {
                display: none;
            }
            .grid-container {
                display: grid;
                grid-template-columns: 1fr 2fr 1fr;
                grid-gap: 10px;
            }
        }

        .card-arama {
            margin-bottom: 40px;
            margin-top:10px;
            border-radius:30px;
            padding: 10px;
            background-color: #EFF3F4;
        }
        .card-gundem {
            margin-bottom: 40px;
            margin-top: 10px;
            border-radius: 30px;
            padding: 30px;
            background-color: #EFF3F4;
        }

        .gundem-list {
            list-style: none;
            margin-top: 30px;
            padding: 0;
        }

            .gundem-list a {
                text-decoration: none;
                color: inherit;
                font-weight: bold;
            }
            .gundem{
                width:350px;
                margin-right:130px;
                margin-left:10px;
            }

    </style>
</head>
<body>
    <div class="grid-container">
        <div style="width:200px;">
            <nav class="navbar navbar-expand-lg bg-white">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><img class="xlogo" src="~/Images/XLogo.png" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#"><i class="bi bi-house-door-fill"></i> Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-search"></i> Keşfet</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-bell"></i> Bildirimler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-envelope"></i> Mesajlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-card-list"></i> Listeler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-bookmark"></i> Yer İşaretleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-people"></i> Topluluklar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-star"></i> Premium</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-person-square"></i> Profil</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i> Daha Fazla
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Para Kazanma</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">İçerik Üreticisi</a></li>
                                    <li><a class="dropdown-item" href="#">Profesyonel Araçlar</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
            <div class="hr"></div>

        
        <!--offcanvas-->
        <a class="btn hrefButon" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
            <img class="xlogo" src="~/Images/XLogo.png" />
        </a>

        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                </div>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#"><i class="bi bi-house-door-fill"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-search"></i> Keşfet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-bell"></i> Bildirimler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-envelope"></i> Mesajlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-card-list"></i> Listeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-bookmark"></i> Yer İşaretleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-people"></i> Topluluklar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-star"></i> Premium</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-person-square"></i> Profil</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i> Daha Fazla
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Para Kazanma</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">İçerik Üreticisi</a></li>
                            <li><a class="dropdown-item" href="#">Profesyonel Araçlar</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>



        <div class="container">
            @RenderBody()
        </div>

        <div class="gundem">
            <div class="card-arama">
                <form class="d-flex" role="search">
                    <button class="btn" type="submit"><i class="bi bi-search"></i></button>
                    <input class="form-control me-2" style="background-color: #EFF3F4" type="search" placeholder="Ara" aria-label="Search">
                </form>
            </div>
            <div class="card-gundem">
                <h5 class="text-center mb-5"><strong>İlgini çekebilecek gündemler</strong></h5>
                <p><strong>Gündemdekiler</strong></p>
                <li class="gundem-list"><a href="#">#BORSA</a></li>
                <li class="gundem-list"><a href="#">#DEPREM</a></li>
                <li class="gundem-list"><a href="#">#iSTANBUL</a></li>
                <li class="gundem-list"><a href="#">#BORSA</a></li>
                <li class="gundem-list"><a href="#">#DEPREM</a></li>
                <li class="gundem-list"><a href="#">#iSTANBUL</a></li>
                <li class="gundem-list"><a href="#">#BORSA</a></li>
                <li class="gundem-list"><a href="#">#DEPREM</a></li>
                <li class="gundem-list"><a href="#">#iSTANBUL</a></li>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha384-bM46uJWToQ0NKTJ2dxqQI8FqDwA5T3s/bwrzKT74Pcy0/5FfNE8I6S1o3Z72lTV6" crossorigin="anonymous"></script>
</body>
</html>
